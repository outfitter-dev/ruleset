{
  "name": "@ruleset/types",
  "description": "Shared type definitions and result primitives for the Rulesets v0.4 stack.",
  "version": "0.4.0-next.0",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "default": "./dist/schemas/manifest.json"
    },
    "./schemas/*": "./dist/schemas/*.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && bunx tsc --project tsconfig.json && bun run generate-schemas",
    "clean": "rm -rf dist",
    "dev": "bunx tsc --watch --project tsconfig.json",
    "lint": "bunx biome lint src",
    "test": "bun test",
    "typecheck": "bunx tsc --project tsconfig.json --noEmit",
    "generate-schemas": "bun scripts/generate-schemas.ts"
  },
  "dependencies": {
    "type-fest": "^4.41.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
