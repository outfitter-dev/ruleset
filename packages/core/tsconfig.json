{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "paths": {
      "@rulesets/core": ["./src"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "src/**/__tests__"]
}
