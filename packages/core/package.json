{
  "name": "@rulesets/core",
  "version": "0.1.0",
  "private": false,
  "description": "Core library for Rulesets: parser, compiler, linter, and plugins.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup && tsc -p tsconfig.json --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bunx ultracite lint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "@iarna/toml": "^2.2.5",
    "semver": "^7.6.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/bun": "latest",
    "@types/json-schema": "^7.0.15",
    "@types/semver": "^7.5.8",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.1"
  },
  "license": "MIT"
}