{
  "name": "@rulesets/core",
  "description": "Core library for Rulesets: parser, compiler, linter, and providers.",
  "version": "0.4.0-next.0",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "semver": "^7.7.2",
    "type-fest": "^4.41.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.5.2",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.1"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist tsconfig.tsbuildinfo && bunx tsc --project tsconfig.json",
    "dev": "bunx tsc --watch --project tsconfig.json",
    "lint": "bunx ultracite check .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "bunx tsc --noEmit"
  },
  "types": "./dist/index.d.ts"
}
