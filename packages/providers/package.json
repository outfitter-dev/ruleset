{
  "name": "@ruleset/providers",
  "description": "Provider SDK and capability registry for Rulesets v0.4.",
  "version": "0.4.0-next.0",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && bunx tsc --project tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "bunx tsc --watch --project tsconfig.json",
    "lint": "bunx biome lint src",
    "test": "bun test",
    "typecheck": "bunx tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@ruleset/renderer": "workspace:*",
    "@ruleset/types": "workspace:*",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
