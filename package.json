{
  "name": "rulesets",
  "description": "Rules compiler for AI tools",
  "version": "0.4.0-next.0",
  "author": "Outfitter <hello@outfitter.dev>",
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.5.2",
    "@types/picomatch": "^4.0.2",
    "markdownlint-cli": "^0.45.0",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.2",
    "ultracite": "5.4.5"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "packageManager": "bun@1.2.22",
  "private": true,
  "scripts": {
    "build": "bun run build:libs",
    "build:libs": "bun run --filter \"@ruleset/types\" build && bun run --filter \"@ruleset/parser\" build && bun run --filter \"@ruleset/validator\" build && bun run --filter \"@ruleset/transform\" build && bun run --filter \"@ruleset/renderer\" build && bun run --filter \"@ruleset/providers\" build && bun run --filter \"@ruleset/orchestrator\" build && bun run --filter \"@ruleset/core\" build && bun run --filter \"@ruleset/lib\" build",
    "build:cli": "bun run --filter \"@ruleset/cli\" build:bundle",
    "build:binary": "bun run --filter \"@ruleset/cli\" build:binary",
    "build:release": "bun run build:libs && bun run build:cli",
    "install:binary": "bash scripts/install-binary.sh",
    "uninstall:binary": "bash scripts/uninstall-binary.sh",
    "sandbox:setup": "bash scripts/setup-sandbox.sh",
    "sandbox:clean": "bash scripts/clean-sandbox.sh",
    "changeset": "changeset",
    "deps:check": "syncpack list-mismatches",
    "deps:fix": "syncpack fix-mismatches && syncpack format",
    "deps:format": "syncpack format",
    "deps:update": "bunx npm-check-updates -u && syncpack fix-mismatches && syncpack format",
    "dev": "bun run --filter '*' dev",
    "format": "bunx ultracite format .",
    "lint": "bunx ultracite check .",
    "release": "bun run build --filter=@ruleset/core && changeset publish",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run build:libs && bunx tsc --project tsconfig.json --noEmit",
    "version-packages": "changeset version"
  },
  "syncpack": {
    "semverRange": "^",
    "dependencyTypes": [
      "prod",
      "dev",
      "peer"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
